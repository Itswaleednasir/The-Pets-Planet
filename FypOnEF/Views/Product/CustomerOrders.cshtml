@model IEnumerable<FypOnEF.ViewModels.Product.CartViewModel>

@{
    ViewBag.Title = "CustomerOrders";
    Layout = "~/Views/Shared/_AllViewLayout.cshtml";
}


@section product{
    <div class="using-border py-3">
        <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
                <li>
                    <a href="~/index">Home</a>
                    <span>//</span>
                </li>
                <li>Orders</li>
            </ul>
        </div>
    </div>
    <!--Typography-->
    <section class="inner-pages py-5">
        <div class="container py-xl-5 py-sm-3">
            <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Orders</h3>
            <!-- forms -->
            <section class="typo-section py-4 border-top border-bottom">
                <div class="container col-12">
                    <table class="table table-responsive-lg table-responsive-md text-center table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        @{
                            int i = 1;

                            foreach (var data in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td><a href="~/orderdetails/@data.OD_Id" style="color:midnightblue;">@data.OD_Id</a></td>
                                    <td>@data.OrderDate</td>
                                    <td>@data.OrderStatus</td>
                                </tr>
                                i++;
                            }
                        }
                    </table>
                </div>
            </section>
        </div>
    </section>

}



