@model FypOnEF.ViewModels.Product.ProductCategoryViewModel

@{
    Layout = "~/Views/Shared/_AllViewLayout.cshtml";
    ViewBag.Title = "picdetails";
}

@section product{
    <!-- short -->
    <div class="using-border py-3">
        <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
                <li>
                    <a href="~/index">Home</a>
                    <span>//</span>
                </li>
                <li>Product Detail</li>
            </ul>
        </div>
    </div>
    <!-- //short-->

    <section class="banner-bottom py-lg-5 py-3">
        <div class="container">
            <div class="inner-sec-shop pt-lg-4 pt-3">
                <div class="row">
                    <div class="col-lg-4 single-right-left ">
                        <div class="grid images_3_of_2">
                            <div class="flexslider1">
                                <ul class="slides">
                                    <li data-thumb="@Url.Content(Model.ProImg_Path)">
                                        <div class="thumb-image"> <img src="@Url.Content(Model.ProImg_Path)" data-imagezoom="true" class="img-fluid" alt=" "> </div>
                                    </li>
                                    <li data-thumb="@Url.Content(Model.ProImg_Path)">
                                        <div class="thumb-image"> <img src="@Url.Content(Model.ProImg_Path)" data-imagezoom="true" class="img-fluid" alt=" "> </div>
                                    </li>
                                    <li data-thumb="@Url.Content(Model.ProImg_Path)">
                                        <div class="thumb-image"> <img src="@Url.Content(Model.ProImg_Path)" data-imagezoom="true" class="img-fluid" alt=" "> </div>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 single-right-left simpleCart_shelfItem">
                        <h3>@Model.PC3_Name</h3>
                        <p>
                            <span class="item_price">Rs.@Model.Vendor_Price</span>
                        </p>
                        <br />
                        <div class="quantity">
                            <div class="quantity-select">
                                <div class="entry value-minus">&nbsp;</div>
                                <div class="entry value qty">1</div>
                                <div class="entry value-plus active">&nbsp;</div>
                            </div>
                        </div>
                        <br />


                        <div class="occasion-cart">
                            <div class="toys single-item singlepage">
                                <form action="#" method="post">
                                    <input type="hidden" name="cmd" value="_cart">
                                    <input type="hidden" name="add" value="quantity">
                                    <input type="hidden" name="toys_item" value="@Model.PC3_Name">
                                    <input type="hidden" name="amount" value="@Model.Vendor_Price">
                                    <button type="button" class="toys-cart ptoys-cart add" onclick="genericcart(@Model.PC3_Id,'Add')" data-toggle="modal" data-target="#modalCart">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"> </div>
                    <!--/tabs-->
                    <div class="responsive_tabs">
                        <div id="horizontalTab">
                            <ul class="resp-tabs-list">
                                <li>Description</li>
                                <li>Specification</li>
                            </ul>
                            <div class="resp-tabs-container">
                                <!--/tab_one-->
                                <div class="tab1">
                                    <div class="single_page">
                                        <h6>@Model.PC3_Name</h6>
                                        <p class="para">
                                            @Model.VP_Desc
                                        </p>

                                    </div>
                                </div>
                                <!--//tab_one-->
                                <div class="tab2">
                                    <div class="single_page">
                                        <h6>@Model.PC3_Name</h6>
                                        <p class="para">
                                            @Model.VP_Specs
                                        </p>

                                    </div>

                                </div>
                            </div>
                        </div>
                        <!--//tabs-->
                    </div>
                </div>

                <div>
                </div>
            </div>
        </div>
    </section>
    @using (Html.BeginForm())
    {
        <div id="PC3_Id" class="form-control" hidden>
            @Model.PC3_Id
        </div>
    }

}

@section script{
<script>
    $('.value-plus').on('click', function () {
        var divUpd = $(this).parent().find('.value'),
            newVal = parseInt(divUpd.text(), 10) + 1;
        divUpd.text(newVal);

    });

    $('.value-minus').on('click', function () {
        var divUpd = $(this).parent().find('.value'),
            newVal = parseInt(divUpd.text(), 10) - 1;
        if (newVal >= 1) {
            divUpd.text(newVal);
        }

    });
</script>

