@model FypOnEF.Models.User.UserModel

@{
    Layout = "~/Views/Shared/_AllViewLayout.cshtml";
    ViewBag.Title = "LoginUser";
}

@section product{
    <div class="using-border py-3">
        <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
                <li>
                    <a href="~/index">Home</a>
                    <span>//</span>
                </li>
                <li>Login</li>
            </ul>
        </div>
    </div>
    <!--Typography-->
    <section class="inner-pages py-5">
        <div class="container py-xl-5 py-sm-3">
            <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Login Form</h3>
            <!-- forms -->
            <section class="typo-section py-4 border-top border-bottom">
                @if (TempData["Login"] != null)
                {
                    <h1 style="text-align:center">@TempData["Login"]</h1>
                }
                else
                {
                using (Html.BeginForm("Login", "User", FormMethod.Post, new { enctype = "multipart/form-data" , @style = "margin:0 0 0 400px;" }))
                {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.US_Name, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.US_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.US_Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.US_Password, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.US_Password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.US_Password, "", new { @class = "text-danger" })
                                    @Html.ValidationMessage("error", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary" style="float:right;">Login</button>
                                    <p class="text-danger">@ViewBag.ErrorMsg</p>
                                    <p class="text-danger">@TempData["Error"]</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </section>
        </div>
    </section>
}
