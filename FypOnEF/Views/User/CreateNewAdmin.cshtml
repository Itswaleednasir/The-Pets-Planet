                        @Html.EditorFor(model => model.US_Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.US_Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
