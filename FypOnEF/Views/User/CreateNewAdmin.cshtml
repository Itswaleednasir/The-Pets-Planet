@model FypOnEF.Models.User.UserModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CreateNewAdmin";
}


@section admin{
    <div class="container">
        @using (Html.BeginForm("CreateAdmin", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
