                        @Html.EditorFor(model => model.US_Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.US_Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.US_Email, htmlAttributes: new { @class = "control-label col-md-2" })
