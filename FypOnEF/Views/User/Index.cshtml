@model IEnumerable<FypOnEF.ViewModels.Blog.BlogViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

@section index{
    <section class="about py-lg-4 py-md-3 py-sm-3 py-3" id="about">
        <div class="container py-lg-5 py-md-5 py-sm-4 py-4">
            <h3 class="title text-center mb-lg-5 mb-md-4  mb-sm-4 mb-3">Products</h3>
            <div class="row banner-below-w3l">
                <div class="col-lg-4 col-md-6 col-sm-6 text-center banner-agile-flowers">
                    <a href="~/Product/picdetails/1033">
                        <img src="~/Template/images/PT1.jpg" class="img-thumbnail" alt="" height="340" width="340">
                    </a>
                    <div class="banner-right-icon">
                        <h4 class="pt-3">Pets Toys</h4>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 text-center banner-agile-flowers">
                    <a href="~/product/3020">
                        <img src="~/Content/Pictures/VendorProductImages/15678190049381193436146.jpg" class="img-thumbnail" alt="">
                    </a>
                    <div class="banner-right-icon">
                        <h4 class="pt-3">Pets Food</h4>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 text-center banner-agile-flowers">
                    <a href="~/Product/picdetails/1035">
                        <img src="~/Template/images/PT5.jpg" class="img-thumbnail" alt="">
                    </a>
                    <div class="banner-right-icon">
                        <h4 class="pt-3">Pets Shampoo</h4>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 mt-3 text-center banner-agile-flowers">
                    <a href="~/Product/picdetails/1036">
                        <img src="~/Template/images/PT4.jpg" class="img-thumbnail" alt="">
                    </a>
                    <div class="banner-right-icon">
                        <h4 class="pt-3">Pets Collar And Chain</h4>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 mt-3 text-center banner-agile-flowers">
                    <a href="~/Product/picdetails/1034">
                        <img src="~/Template/images/PT3.jpg" class="img-thumbnail" alt="">
                    </a>
                    <div class="banner-right-icon">
                        <h4 class="pt-3">Pets Clothes</h4>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 mt-3 text-center banner-agile-flowers">
                    <a href="~/Product/picdetails/1037">
                        <img src="~/Template/images/PT2.jpg" class="img-thumbnail" alt="">
                    </a>
                    <div class="banner-right-icon">
                        <h4 class="pt-3">Pets Carrier</h4>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="clients py-lg-4 py-md-3 py-sm-3 py-3" id="clients">
        <div class="container py-lg-5 py-md-5 py-sm-4 py-3">
            <h3 class="title clr text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Blogs</h3>
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        Double getCountForIteratin = Math.Round(Convert.ToDouble(Model.ToList().Count) / 2, MidpointRounding.AwayFromZero);
                        for (int i = 0; i < getCountForIteratin; i++)
                        {
                            var itemsToSkip = i * 2;
                            var activeClass = "";

                            if (itemsToSkip == 0)
                            {
                                activeClass = "active";
                            }
                            var currentItems = Model.Skip(itemsToSkip).Take(2).ToList();
                            <div class="carousel-item @activeClass">
                                <div class="row">
                                    @foreach (var item in currentItems)
                                    {
                                        <div class="col-lg-6 clients-w3layouts-row">
                                            <div class="least-w3layouts-text-gap">
                                                <div class="row">
                                                    <div class="col-md-4 col-sm-4 news-img">
                                                        <img src="@Url.Content(item.Blogger_PicturePath)" alt="" width="100" height="100" class="image-fluid">
                                                    </div>
                                                    <div class="col-md-8 col-sm-8 clients-says-w3layouts">
                                                        <h4>@item.US_Name</h4>
                                                        <span class="mt-2">@item.Blog_Date</span>
                                                    </div>
                                                    <div class="mt-3 news-agile-text">
                                                        <img src="@Url.Content(item.Blog_PicturePath)" alt="" width="450" height="250" class="image-fluid">
                                                        <p class="mt-3"><span class="fas fa-quote-left"></span> @item.Blog_WholeBlog <span class="fas fa-quote-right"></span></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>

    <!-- Product-view -->
    <section class="product py-lg-4 py-md-3 py-sm-3 py-3">
        <div class="container py-lg-5 py-md-5 py-sm-4 py-3">
            <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Products</h3>
            <div class=" img-toy-w3l-top">
            </div>
            <div class="mt-lg-4 mt-3 product-info-img">
                <h3 class="text-center">Pawline Foldable Pet Hut</h3>
                <div class="clients_more-buttn text-center">
                    <a href="~/Product/picdetails/1038">Shop Now</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 img-toy-w3l-left">
                    <div class="toys-img-one">
                    </div>
                    <div class="mt-lg-4 mt-3 product-info-img">
                        <h3 class="text-center">Nutra Gold</h3>
                        <div class="clients_more-buttn text-center">
                            <a href="~/Product/picdetails/1039">Shop Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 img-toy-agile-right">
                    <div class="toys-img-one-two">
                    </div>
                    <div class="mt-lg-4 mt-3 product-info-img">
                        <h3 class="text-center">Collar Pack</h3>
                        <div class="clients_more-buttn text-center">
                            <a href="~/Product/picdetails/1041">Shop Now</a>
                        </div>
                    </div>
                    <div class="toys-img-one-three">
                    </div>
                    <div class="mt-lg-4 mt-3 product-info-img">
                        <h3 class="text-center">Pet Brush</h3>
                        <div class="clients_more-buttn text-center">
                            <a href="~/Product/picdetails/1040">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--//Product-view-->

    <section class="about py-lg-4 py-md-3 py-sm-3 py-3">
        <div class="container py-lg-5 py-md-5 py-sm-4 py-3">
            <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">About Us</h3>
            <div class="about-products-w3layouts" id="divAbout">
                <p class="text-center">
                    <i>
                        This website is all that a pets lover could have. One can buy pets, pet related products that includes various accessories and food or they can read the blogs to know the ultimate way to bring their pet up.

                        Not only this vendors can sell the pets and their products with considerable profit.

                        If you are enlighted by the knowledge of pets you can share it with others via publishing the blogs on this website.

                        Hence this website offers everything for your pet at the distance of single tap.
                    </i>
                </p>
            </div>
        </div>
    </section>
}
