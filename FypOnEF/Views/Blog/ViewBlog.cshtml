@model IEnumerable<FypOnEF.ViewModels.Blog.BlogViewModel>

@{
    ViewBag.Title = "ViewBlog";
    Layout = "~/Views/Shared/_AllViewLayout.cshtml";
}

@section product{
<div class="using-border py-3">
    <div class="inner_breadcrumb  ml-4">
        <ul class="short_ls">
            <li>
                <a href="/index">Home</a>
                <span>//</span>
            </li>
            <li>Blogs</li>
        </ul>
    </div>
</div>


<section class="inner-pages py-5">
    <div class="container py-xl-5 py-sm-3">
        <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Blogs</h3>
        <hr />
        <div style="margin-left:100px;">
            <a href="~/blog/upload" class="button3 btn btn-primary" style="margin-left:750px;border-radius:15px;">Write Blog</a>
        </div>
        <br />
        <!-- forms -->
        @{
            int i = 1;
            foreach (var data in Model)
            {
                <div id="accordion">
                    <div class="card mb-3" style="margin-right:150px;margin-left:150px;">
                        <div class="card-header " id="heading_@i">
                            <h5 class="mb-0">
                                @data.Blog_Title
                                <button class="btn btn-primary blog-name collapse" style="float:right;" data-toggle="collapse"
                                        data-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </h5>
                        </div>

                        <div id="collapse_@i" class="collapse" aria-labelledby="heading_@i" data-parent="#accordion">
                            <div class="row card-body">
                                <div class="col-xs-8 col-md-8 departs">
                                    <label class="col-lg-12 col-form-label">
                                        @data.Blog_WholeBlog
                                    </label>
                                    <img class="img-fluid" src="@Url.Content(data.Blog_PicturePath)" alt="cnic" width="100" height="100" style="margin-right:100%">
                                </div>
                                <div class="col-xs-4 col-md-4 departs">
                                    <label class="col-lg-12 col-form-label">Posted By:@data.US_Name</label>
                                    <img class="img-fluid" src="@Url.Content(data.Blogger_PicturePath)" alt="cnic" width="100" height="100" style="margin-right:100%">
                                    <div>
                                        <label>Date:@data.Blog_Date</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                i++;
            }
        }
    </div>
</section>
}

<script src="~/Scripts/jquery-3.4.1.slim.min.js"></script>

<script>
    $(document).ready(function () {
        $(".blog-name").on("click", function () {
            $(this).children("i").toggleClass("fa-minus");
            $(this).children("i").toggleClass("fa-plus");
        });
    });
</script>


