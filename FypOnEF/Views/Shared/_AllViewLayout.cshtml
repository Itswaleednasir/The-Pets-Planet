<script>
    function Cart() {

        $.getJSON("/basket",
        function (json) {
            $('#itemcount').text(json.length);
            var tr;
            $("#tbodyid").empty();
            var price = 0;
            for (var i = 0; i < json.length; i++) {
                var id = json[i].PC3_Id;
                price += (json[i].Vendor_Price * json[i].OD_ProductQty);
                tr = $('<tr id=rem_' + json[i].PC3_Id + '/>');
                tr.append("<td id=checkItemId_" + json[i].PC3_Id + ">" + (i + 1) + "</td>");
                tr.append("<td>" + json[i].PC3_Name + "</td>");
                tr.append("<td>" + json[i].OD_ProductQty + "</td>");
                tr.append("<td>" + json[i].Vendor_Price + "</td>");
                tr.append("<td class=invert><div class=rem><div class=close1 onclick=genericcart(" + id + ",'Remove')></div></div></td>")
                $('.mytable').append(tr);
            }
            $('#totalbill').text(price);
        });
    }

    function genericcart(id, action) {
        var obj = {};
        if (action == "Add") {
            var kk = '#rem_' + id;
            obj.OD_ProductQty = document.getElementsByClassName("quantity-select")[0].children[1].innerHTML;
        }
        else if (action == "Remove") {
            var kk = '#rem_' + id;
            var cc = '#checkItemId_' + id;
            $(kk).remove();
            $(cc).remove();
            var itemcount = $('#itemcount').text();
            itemcount = itemcount - 1;
            $('#itemcount').text(itemcount);
        }

        obj.PC3_Id = id;
        obj.action = action;
        obj.url = "/product/addcart";
        obj.type = "POST";
        obj.datatype = "json";
        obj.data = JSON.stringify({ b: obj });
        obj.contentType = "application/json";
        obj.success = function (json) {
            if (json.isRedirect) {
                window.location.href = json.redirectUrl;
            }
        };
        obj.error = function (response) {
            alert("error")
        };
        $.ajax(obj);
        Cart();
    }
</script>

